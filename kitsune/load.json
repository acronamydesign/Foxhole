{
	"component_list":[
		"utility",
		"grid",
		"typography",
		"button",
		"dropdown",
		"form",
		"hero",
		"g_color",
		"modal",
		"navbar",
		"notify",
		"reset",
		"tables",
		"icons",
		"image_tools",
		"cards",
		"sounds"
	],
	"convention_schema":{
		"component":{
			"files":{
				"local_schema":"@{component}_schema.json",
				"main":"@{component}_main.styl",
				"readme":"@{component}_readme.md"
			},
			"folders":["scripts","example"],
			"font_components":["typography","icons"]
		},
		"core":["components","utilities","dist","core"],
		"dist":{
			"folders":["scripts","styles"],
			"styles":{
				"folders":["compressed","uncompressed"]
			},
			"scripts":{
				"folders":["compressed","uncompressed"]
			}
		}
	},
	"features":{
		"build":true,
		"dev_server":true,
		"watch":true
	},
	"path":{
		"dist":"./dist",
		"src":"./components",
		"core":"./core",
		"kitsune_style":"./core/kitsune.styl"
	}
}
