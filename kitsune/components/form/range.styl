use = json('./form_schema.json',{hash:true})

input[type=range]
	appearance button
	max-width:use.common.max_width;
	width 100%
	padding 10px
	height:50px;
	overflow:hidden;
	border:0;
	background-color:rgba(255,255,255,0);
	outline:0;
	&:active,
	&:focus
		outline:0;
		border:0;

input[type=range]::-moz-focus-outer
	outline:0;
	border:0;


track_height = rem(5px)
//must wrap in range control wrapper


range_track_common()
	width 100%
	height track_height
	cursor pointer
	-webkit-border-radius 9999em
	-moz-border-radius 9999em
	-webkit-box-shadow: inset 0px 1px 1px 0px rgba(0,0,0,0.13);
	-moz-box-shadow: inset 0px 1px 1px 0px rgba(0,0,0,0.13);
	background-color:#dedede;
	border:1px solid use.common.input_border;

input[type=range]::-webkit-slider-runnable-track
	range_track_common()
input[type=range]::-moz-range-track
	range_track_common()
input[type=range]::-ms-track
	range_track_common()
	background rgba(255,255,255,0)
	border-color rgba(255,255,255,0)
	color rgba(255,255,255,0)
	border:0;

range_slider_common()
	box-shadow 1.1px 1.1px 1px rgba(0, 0, 0, 0.19), 0px 0px 1.1px rgba(13, 13, 13, 0.19)
	border 0px solid rgba(0, 0, 0, 0)
	height 26px
	width:@height;
	border-radius 9999em
	background #f5f5f5
	cursor pointer
	appearance none
	position:relative;
	&:after
		content:"";
		right:@width;
		position:absolute;
		display:block;
		pointer-events: none;
		height:track_height;
		width:100vw;
		top:-2px;
		bottom:0;
		margin:auto;
		background-color:#757575;
		box-shadow 1.1px 1.1px 1px rgba(0, 0, 0, 0.19), 0px 0px 1.1px rgba(13, 13, 13, 0.19)

input[type=range]::-webkit-slider-thumb
	range_slider_common()
	margin-top -10.6px

input[type=range]::-moz-range-thumb
	range_slider_common()

input[type=range]::-ms-thumb
	range_slider_common()
	height 5.2px


input[type=range]::-ms-fill-lower
	background rgba(184, 184, 184, 0.78)
	border 0.2px solid #c5c5c5
	border-radius 50px
	box-shadow 0px 0px 0.6px #000000, 0px 0px 0px #0d0d0d

input[type=range]::-ms-fill-upper
	background rgba(197, 197, 197, 0.78)
	border 0.2px solid #c5c5c5
	border-radius 50px
	box-shadow 0px 0px 0.6px #000000, 0px 0px 0px #0d0d0d
